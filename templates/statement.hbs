  background-color: #f3f3f3;
}
.content-table tbody tr:last-of-type{
  border-bottom: 2px solid #F6A621;
}

.header{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.title{
    font-size: 20px;
    color: #1E292C;
    font-family: 'Open Sans';
    font-weight: 600;
    margin-top: -20px;
}

.wide{
  width: 100px !important;
}



.info-table {
  border: 0.5px solid #F6A621;
