    .content-table{
  border-collapse: collapse;
  font-family: 'Open Sans';
  font-size: 12px;
  min-width: 400px;
  border-radius: 5px 5px 0 0;
  overflow: hidden;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.15)
}

.content-table thead tr{
  background-color: #1E292C;
  color: #F6A621;
  text-transform: uppercase;
  font-size: 11px;
  text-align: left;
  font-weight: bold;
  font-family: 'Open Sans'
}
 .content-table td{
  padding: 8px
}

.content-table th{
   padding-top: 10px;
   padding-bottom: 10px
},

.content-table tbody tr{
  border-bottom: 0.5px solid #F6A621;
  font-family: 'Open Sans';
}
