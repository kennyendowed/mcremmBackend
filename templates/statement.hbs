    <div style="margin: 30px 20px; display: flex; justify-content: space-between;">
     
        <table class="info-table" style="width:57%; margin-bottom: 20px;">
          <col style="width:40%">
  <tr>
    <th class="info-header">Cust. Name</th>
    <td class="info-data">{{userInfo.accountName}}</td>
  </tr>
  <tr>
    <th class="info-header">Address</th>
    <td class="info-data">{{userInfo.address}} </td>
  </tr>
  <tr>
    <th class="info-header">Acc. No</th>
    <td class="info-data">{{accountNumber}}</td>
  </tr>
   <tr>
    <th class="info-header">Acc. Type</th>
    <td class="info-data">{{userInfo.accountType}}</td>
  </tr>
   <tr>
    <th class="info-header">Currency</th>
    <td class="info-data">{{userInfo.currency}}</td>
  </tr>
</table>


 
        <table class="info-table" style="width:40%; margin-bottom: 20px;" cellpadding="10">
  <tr>
    <th class="info-header">Start Date:</th>
    <td class="info-data">{{startDate}}</td>
  </tr>
  <tr>
    <th class="info-header">End Date:</th>
    <td class="info-data">{{endDate}}</td>
  </tr>
  <tr>
    <th class="info-header">Opening Balance:</th>
    <td class="info-data">{{formatCurrency openingBalance}}</td>
  </tr>

   <tr>
    <th class="info-header">Closing Balance:</th>
    <td class="info-data">{{formatCurrency closingBalance}}</td>
  </tr>
 
  </tr>
</table>
 
    </div>

<div class="content" style="padding: 20px; background: white">
    <table class="content-table">
      <col style="width:40%">
	    <col style="width:40%">
      <thead>
        <tr>
          <th>Tnx Date</th>
            <th>Val Date</th>
          <th>Remarks</th>
          <th>Debit</th>
          <th>Credit</th>
          <th>Balance</th>
        </tr>
      </thead>
      <tbody>
          {{#each transactions as |trans|}}
        <tr>
          <td>{{substring trans.date}}</td>
           <td>{{substring trans.date}}</td>
          <td>{{trans.narration}}</td>
          <td>{{#equal trans.type 'D'}}{{formatCurrency trans.amount}}{{/equal}}</td>
          <td>{{#equal trans.type 'C'}}  {{formatCurrency trans.amount}}{{/equal}}</td>
          <td>{{formatCurrency trans.runningBal}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>

    <div>
              <table class="info-table" style="width:40%; margin-bottom: 20px; margin-top: 20px;">
  <tr>
    <th class="info-header">TOTAL DEBIT</th>
    <td class="info-data">{{formatCurrency userInfo.outflow}}</td>
  </tr>
  <tr>
    <th class="info-header">TOTAL CREDIT</th>
    <td class="info-data">{{formatCurrency userInfo.inflow}}</td>
  </tr>
  <tr>
    <th class="info-header">DEBIT COUNT</th>
    <td class="info-data">{{userInfo.debitCount}}</td>
  </tr>

   <tr>
    <th class="info-header">CREDIT COUNT</th>
    <td class="info-data">{{userInfo.creditCount}}</td>
  </tr>
 
  </tr>
</table>
